{
		"version": 3,
		"configurePresets": [
				{
						"name": "windows-base",
						"hidden": true,
						"generator": "Ninja",
						"binaryDir": "${sourceDir}/out/build/${presetName}",
						"installDir": "${sourceDir}/out/install/${presetName}",
						"vendor": {
							"microsoft.com/VisualStudioSettings/CMake/1.0": {
								"enableMicrosoftCodeAnalysis": false,
								"enableClangTidyCodeAnalysis": true
							}
						},
						"cacheVariables": {
								"CMAKE_C_COMPILER": "cl.exe",
								"CMAKE_CXX_COMPILER": "cl.exe"
						},
						"condition": {
								"type": "equals",
								"lhs": "${hostSystemName}",
								"rhs": "Windows"
						}
				},
				{
						"name": "x64-debug",
						"displayName": "1: x64 Debug (MSVC)",
						"inherits": "windows-base",
						"architecture": {
								"value": "x64",
								"strategy": "external"
						},
						"cacheVariables": {
								"CMAKE_BUILD_TYPE": "Debug"
						}
				},
				{
						"name": "x64-release",
						"displayName": "2: x64 Release (MSVC)",
						"inherits": "x64-debug",
						"cacheVariables": {
								"CMAKE_BUILD_TYPE": "Release"
						}
				},
				{
						"name": "x64-debug-clang",
						"displayName": "3: x64 Debug (clang)",
						"inherits": "x64-debug",
						"cacheVariables": {
								"CMAKE_C_COMPILER": "clang",
								"CMAKE_CXX_COMPILER": "clang++"
						}
				},
				{
						"name": "x64-release-clang",
						"displayName": "4: x64 Release (clang)",
						"inherits": "x64-release",
						"cacheVariables": {
								"CMAKE_C_COMPILER": "clang",
								"CMAKE_CXX_COMPILER": "clang++"
						}
				},
				{
						"name": "linux-base",
						"hidden": true,
						"generator": "Ninja",
						"binaryDir": "${sourceDir}/out/build/${presetName}",
						"installDir": "${sourceDir}/out/install/${presetName}",
						"cacheVariables": {
								"SDL_UNIX_CONSOLE_BUILD": "ON",
								"CMAKE_C_COMPILER": "gcc-14",
								"CMAKE_CXX_COMPILER": "g++-14"
						},
						"condition": {
								"type": "equals",
								"lhs": "${hostSystemName}",
								"rhs": "Linux"
						},
						"vendor": {
								"microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
										"sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
								}
						}
				},
				{
						"name": "linux-debug",
						"displayName": "1: Linux Debug (GCC)",
						"inherits": "linux-base",
						"cacheVariables": {
								"CMAKE_BUILD_TYPE": "Debug"
						}
				},
				{
						"name": "linux-release",
						"displayName": "2: Linux Release (GCC)",
						"inherits": "linux-base",
						"cacheVariables": {
								"CMAKE_BUILD_TYPE": "Release"
						}
				},
				{
						"name": "linux-debug-clang",
						"displayName": "3: Linux Debug (clang)",
						"inherits": "linux-debug",
						"cacheVariables": {
								"CMAKE_C_COMPILER": "clang",
								"CMAKE_CXX_COMPILER": "clang++"
						}
				},
				{
						"name": "linux-release-clang",
						"displayName": "4: Linux Release (clang)",
						"inherits": "linux-release",
						"cacheVariables": {
								"CMAKE_C_COMPILER": "clang",
								"CMAKE_CXX_COMPILER": "clang++"
						}
				},
				{
						"name": "linux-gcc-cov",
						"displayName": "Linux GCC Test Coverage",
						"generator": "Ninja",
						"binaryDir": "${sourceDir}/out/build/${presetName}",
						"installDir": "${sourceDir}/out/install/${presetName}",
						"cacheVariables": {
								"CMAKE_BUILD_TYPE": "Debug",
								"SDL_UNIX_CONSOLE_BUILD": "ON",
								"CMAKE_C_COMPILER": "gcc-14",
								"CMAKE_CXX_COMPILER": "g++-14",
								"CMAKE_C_FLAGS": "-Og -g -fprofile-arcs -ftest-coverage",
								"CMAKE_CXX_FLAGS": "-Og -g -fprofile-arcs -ftest-coverage",
								"CMAKE_CXX_SCAN_FOR_MODULES": "OFF",
									"CMAKE_DEPENDENCY_SCAN_FORMAT": ""
						},
						"condition": {
								"type": "equals",
								"lhs": "${hostSystemName}",
								"rhs": "Linux"
						},
						"vendor": {
								"microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
										"sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
								}
						}
				},
				{
						"name": "macos-debug",
						"displayName": "macOS Debug",
						"generator": "Ninja",
						"binaryDir": "${sourceDir}/out/build/${presetName}",
						"installDir": "${sourceDir}/out/install/${presetName}",
						"cacheVariables": {
								"CMAKE_BUILD_TYPE": "Debug"
						},
						"condition": {
								"type": "equals",
								"lhs": "${hostSystemName}",
								"rhs": "Darwin"
						},
						"vendor": {
								"microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
										"sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
								}
						}
				}
		]
}
