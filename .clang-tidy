Checks: '
  bug-prone-*,

  cppcoreguidelines-*,
    -cppcoreguidelines-avoid-magic-numbers, # Alias, annoying in a lot of math code,

  google-*,
    -google-build-using-namespace, # Using non-std namespace in headers is generally OK,
    -google-objc-*, # No Objective C here,
    -google-readability-namespace-comments, # No thanks,
    -google-readability-todo, # Very internal Google specific,
    
  misc-*,
    -misc-include-cleaner, # Too many irrelevant warnings,
    -misc-use-anonymous-namespace, # Static was un-deprecated and is typically fine,
    -misc-no-recursion, # Sometimes we need recursion,
    
  modernize-*,
    -modernize-return-braced-init-list, # This check is kind of annoying and largely unnecessary,
    -modernize-use-nullptr, # Crashes for some reason,
    -modernize-use-trailing-return-type, # No thanks,
    
  performance-*,
    
  portability-*,
    
  readability-*,
    -readability-identifier-length, # Sometimes your variables SHOULD be short,
    -readability-function-cognitive-complexity, # Not a fan of this metric,
    -readability-magic-numbers, # This is annoying in a lot of math code,
    -readability-math-missing-parentheses, # There are times when this is unclear but this warning is too aggressive for general use,
    -readability-redundant-inline-specifier, # Redundancy is OK,
    -readability-uppercase-literal-suffix, # Not sure why this check exists,
'

CheckOptions:
 - key: bugprone-assert-side-effect.AssertMacros
   value: "assert,_ASSERT,GADGET_ASSERT"
   
 - key: bugprone-misplaced-widening-cast.CheckImplicitCasts
   value: true
   
 - key: bugprone-sizeof-expression.WarnOnSizeOfPointer
   value: true
   
 - key: cppcoreguidelines-narrowing-conversions.PedanticMode
   value: true
   
 - key: cppcoreguidelines-pro-type-const-cast.StrictMode
   value: true
   
 - key: cppcoreguidelines-special-member-functions.AllowSoleDefaultDtor
   value: true
   
 - key: cppcoreguidelines-special-member-functions.AllowMissingMoveFunctions
   value: true
   
 - key: cppcoreguidelines-special-member-functions.AllowImplicitlyDeletedCopyOrMove
   value: true

 - key: misc-non-private-member-variables-in-classes.IgnoreClassesWithAllMemberVariablesBeingPublic
   value: true
   
 - key: misc-unused-parameters.IgnoreVirtual
   value: true
   
 - key: modernize-avoid-c-arrays.AllowStringArrays
   value: true
   
 - key: modernize-min-max-use-initializer-list.IgnoreTrivialTypesOfSizeAbove
   value: 64
   
 - key: modernize-use-using.IgnoreExternC
   value: true
   
 - key: performance-inefficient-string-concatenation.StrictMode
   value: true
   
 - key: readability-magic-numbers.IgnorePowersOf2IntegerValues
   value: true
   
 - key: readability-simplify-boolean-expr.IgnoreMacros
   value: true
   